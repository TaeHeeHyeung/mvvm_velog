<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navi_graph"
    app:startDestination="@id/myPageFragment">

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.myapplication.fragment.MyPageFragment"
        android:label="myPageFragment"
        tools:layout="@layout/fragment_my_page">

        <!--
        enter A-> B : B의 Animation
        exit A-> B : A의 Animation
        popEnter B-> A: A의 Animation
        popExit B-> A: B의 Animation
        -->
        <action
            android:id="@+id/action_myPageFragment_to_loginPageFragment"
            app:destination="@id/loginPageFragment"
            app:enterAnim="@anim/animation_enter_"
            app:exitAnim="@anim/animation_remain"
            app:popEnterAnim="@anim/animation_remain"
            app:popExitAnim="@anim/animation_exit"
            />
    </fragment>

    <fragment
        android:id="@+id/loginPageFragment"
        android:name="com.example.myapplication.fragment.LoginFragment"
        tools:layout="@layout/fragment_login" />

</navigation>